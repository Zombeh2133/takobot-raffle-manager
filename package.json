{
  "name": "tako-raffle-manager",
  "version": "1.5.0",
  "description": "TakoBot Raffle Manager Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron . --no-sandbox",
    "build": "electron-builder --win --x64",
    "publish": "electron-builder --win --x64 --publish always"
  },
  "keywords": [],
  "author": "Rina",
  "license": "ISC",
  "devDependencies": {
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0"
  },
  "build": {
    "appId": "com.takobot.rafflemanager",
    "productName": "TakoBot Raffle Manager",
    "compression": "maximum",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "differentialPackage": true
    },
    "files": [
      "**/*",
      "!venv/**/*",
      "!**/*.map",
      "!**/.git*",
      "!**/README.md",
      "!**/LICENSE*",
      "!**/*.md",
      "!.editorconfig",
      "!.eslintrc*",
      "!.prettierrc*",
      "!**/.DS_Store",
      "!**/Thumbs.db",
      "!dist/**/*",
      "!node_modules/.cache/**/*",
      "!**/__pycache__/**/*",
      "!**/*.pyc",
      "!**/*.pyo"
    ],
    "asarUnpack": [
      "venv/**/*"
    ],
    "extraResources": [
      {
        "from": "venv",
        "to": "venv",
        "filter": [
          "**/*",
          "!**/__pycache__/**/*",
          "!**/*.pyc",
          "!**/*.pyo",
          "!**/test/**/*",
          "!**/tests/**/*",
          "!**/pip/_internal/cache/**/*"
        ]
      }
    ],
    "publish": {
      "provider": "generic",
      "url": "http://107.22.96.217/updates/"
    }
  },
  "dependencies": {
    "compression": "^1.8.1",
    "electron-log": "^5.0.1",
    "electron-updater": "^6.7.3"
  }
}

