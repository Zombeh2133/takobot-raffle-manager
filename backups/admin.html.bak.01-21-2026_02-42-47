<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.js"></script>

<script>
  // Sidebar highlight
  (function () {
    const nav = document.getElementById("sidebarNav");
    const square = document.getElementById("activeSquare");
    if (!nav || !square) return;

    function moveSquareTo(item) {
      square.style.top = (nav.offsetTop + item.offsetTop) + "px";
    }

    const active = nav.querySelector(".is-active");
    if (active) moveSquareTo(active);
  })();

  // Settings button
  (function () {
    const settingsBtn = document.getElementById("settingsBtn");
    if (settingsBtn) {
      settingsBtn.style.cursor = "pointer";
      settingsBtn.addEventListener("click", () => {
        window.location.href = "/settings";
      });
    }
  })();

  // ============ ADMIN ACCESS CONTROL ============
  (async function checkAdminAccess() {
    try {
      // TODO: Replace with actual API call to check admin status
      // const result = await API.checkAdminStatus();
      
      // For now, check localStorage for admin flag
      const isAdmin = localStorage.getItem('isAdmin') === 'true';
      
      if (!isAdmin) {
        // Redirect to dashboard if not admin
        alert('‚ö†Ô∏è Access Denied\n\nYou do not have permission to access the admin dashboard.');
        window.location.href = '/dashboard';
        return;
      }
    } catch (e) {
      console.error('Admin access check failed:', e);
      window.location.href = '/dashboard';
    }
  })();

  // ============ ADMIN DASHBOARD LOGIC ============
  (function () {
    let currentYear = 2026;
    let allData = [];

    const monthNames = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];

    // Elements
    const yearDisplay = document.getElementById('currentYear');
    const prevYearBtn = document.getElementById('prevYear');
    const nextYearBtn = document.getElementById('nextYear');
    const monthlyTableBody = document.getElementById('monthlyTableBody');

    // Stat elements
    const statCompleted = document.getElementById('statCompleted');
    const statCancelled = document.getElementById('statCancelled');
    const statRevenue = document.getElementById('statRevenue');
    const statUsers = document.getElementById('statUsers');

    // Chart instances
    let monthlyChart = null;
    let statusChart = null;

    // Year navigation
    prevYearBtn.addEventListener('click', () => {
      currentYear--;
      yearDisplay.textContent = currentYear;
      loadAdminData();
    });

    nextYearBtn.addEventListener('click', () => {
      currentYear++;
      yearDisplay.textContent = currentYear;
      loadAdminData();
    });

    async function loadAdminData() {
      try {
        // TODO: Replace with actual API call to get admin analytics
        // const result = await API.getAdminAnalytics(currentYear);
        
        // Mock data for now
        const mockData = generateMockData(currentYear);
        allData = mockData;
        
        renderStats(mockData);
        renderMonthlyChart(mockData.monthly);
        renderStatusChart(mockData);
        renderMonthlyTable(mockData.monthly);
      } catch (e) {
        console.error('Failed to load admin data:', e);
      }
    }

    function generateMockData(year) {
      // Generate realistic mock data
      const monthly = monthNames.map((month, index) => {
        const completed = Math.floor(Math.random() * 50) + 10;
        const cancelled = Math.floor(Math.random() * 20);
        const revenue = completed * (Math.random() * 5000 + 2000);
        
        return {
          month,
          completed,
          cancelled,
          total: completed + cancelled,
          revenue: Math.round(revenue),
          completionRate: Math.round((completed / (completed + cancelled)) * 100)
        };
      });

      const totalCompleted = monthly.reduce((sum, m) => sum + m.completed, 0);
      const totalCancelled = monthly.reduce((sum, m) => sum + m.cancelled, 0);
      const totalRevenue = monthly.reduce((sum, m) => sum + m.revenue, 0);
      const uniqueUsers = Math.floor(Math.random() * 200) + 50;

      return {
        year,
        monthly,
        totalCompleted,
        totalCancelled,
        totalRevenue,
        uniqueUsers
      };
    }

    function renderStats(data) {
      statCompleted.textContent = data.totalCompleted.toLocaleString();
      statCancelled.textContent = data.totalCancelled.toLocaleString();
      statRevenue.textContent = '$' + (data.totalRevenue / 1000).toFixed(1) + 'K';
      statUsers.textContent = data.uniqueUsers.toLocaleString();
    }

    function renderMonthlyChart(monthlyData) {
      const ctx = document.getElementById('monthlyChart');
      
      if (monthlyChart) {
        monthlyChart.destroy();
      }

      monthlyChart = new Chart(ctx, {
        type: 'bar',
        data: {
          labels: monthlyData.map(m => m.month),
          datasets: [
            {
              label: 'Completed',
              data: monthlyData.map(m => m.completed),
              backgroundColor: 'rgba(16, 185, 129, 0.8)',
              borderColor: 'rgba(16, 185, 129, 1)',
              borderWidth: 2,
              borderRadius: 6
            },
            {
              label: 'Cancelled',
              data: monthlyData.map(m => m.cancelled),
              backgroundColor: 'rgba(239, 68, 68, 0.8)',
              borderColor: 'rgba(239, 68, 68, 1)',
              borderWidth: 2,
              borderRadius: 6
            }
          ]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              position: 'top',
              labels: {
                font: {
                  family: 'Inter',
                  size: 12,
                  weight: '600'
                },
                padding: 16,
                usePointStyle: true,
                pointStyle: 'circle'
              }
            }
          },
          scales: {
            y: {
              beginAtZero: true,
              grid: {
                color: 'rgba(0, 0, 0, 0.05)'
              },
              ticks: {
                font: {
                  family: 'Inter',
                  size: 11
                }
              }
            },
            x: {
              grid: {
                display: false
              },
              ticks: {
                font: {
                  family: 'Inter',
                  size: 11,
                  weight: '600'
                }
              }
            }
          }
        }
      });
    }

    function renderStatusChart(data) {
      const ctx = document.getElementById('statusChart');
      
      if (statusChart) {
        statusChart.destroy();
      }

      const total = data.totalCompleted + data.totalCancelled;
      const completionRate = Math.round((data.totalCompleted / total) * 100);

      statusChart = new Chart(ctx, {
        type: 'doughnut',
        data: {
          labels: ['Completed', 'Cancelled'],
          datasets: [{
            data: [data.totalCompleted, data.totalCancelled],
            backgroundColor: [
              'rgba(16, 185, 129, 0.8)',
              'rgba(239, 68, 68, 0.8)'
            ],
            borderColor: [
              'rgba(16, 185, 129, 1)',
              'rgba(239, 68, 68, 1)'
            ],
            borderWidth: 2
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              position: 'bottom',
              labels: {
                font: {
                  family: 'Inter',
                  size: 12,
                  weight: '600'
                },
                padding: 16,
                usePointStyle: true,
                pointStyle: 'circle'
              }
            },
            tooltip: {
              callbacks: {
                label: function(context) {
                  const label = context.label || '';
                  const value = context.parsed || 0;
                  const percentage = Math.round((value / total) * 100);
                  return `${label}: ${value} (${percentage}%)`;
                }
              }
            }
          },
          cutout: '70%'
        }
      });
    }

    function renderMonthlyTable(monthlyData) {
      monthlyTableBody.innerHTML = '';

      monthlyData.forEach(data => {
        const row = document.createElement('tr');
        
        const badgeClass = data.completionRate >= 70 ? 'success' : 'danger';
        
        row.innerHTML = `
          <td class="month-cell">${data.month}</td>
          <td>${data.completed}</td>
          <td>${data.cancelled}</td>
          <td><strong>${data.total}</strong></td>
          <td><strong>$${data.revenue.toLocaleString()}</strong></td>
          <td><span class="badge ${badgeClass}">${data.completionRate}%</span></td>
        `;
        
        monthlyTableBody.appendChild(row);
      });
    }

    // Initial load
    loadAdminData();
  })();
</script>

</body>
</html>
