<script>
  // Sidebar Admin Control - Intercept admin links for non-admin users
  (function() {
    const sidebarNav = document.getElementById('sidebarNav');
    if (!sidebarNav) return;
    
    // Find admin links
    const allLinks = sidebarNav.querySelectorAll('.nav-item');
    allLinks.forEach(link => {
      const href = link.getAttribute('href');
      if (href === '/admin' || href === '/user-management') {
        // Add click handler that runs BEFORE navigation
        link.addEventListener('click', function(e) {
          if (!window.adminCheckComplete) {
            e.preventDefault();
            e.stopPropagation();
            alert('Access Denied\n\nAdmins only');
          }
        }, true);
      }
    });
    
    // Check if user is admin (async)
    (async function() {
      try {
        const response = await fetch('/api/auth/current-user');
        if (!response.ok) return;
        
        const data = await response.json();
        if (data.data?.isAdmin === true) {
          window.adminCheckComplete = true;
          console.log('‚úÖ Admin access granted');
        } else {
          console.log('üîí Admin links blocked for non-admin user');
        }
      } catch (error) {
        console.error('Error checking admin status:', error);
      }
    })();
  })();
</script>

<script>
  // Move sidebar highlight square to active item
  (function () {
    const nav = document.getElementById("sidebarNav");
    const square = document.getElementById("activeSquare");
    if (!nav || !square) return;

    function moveSquareTo(item) {
      square.style.top = (nav.offsetTop + item.offsetTop) + "px";
    }

    const active = nav.querySelector(".is-active");
    if (active) moveSquareTo(active);
  })();

  // Settings button
  (function () {
    const settingsBtn = document.getElementById("settingsBtn");
    if (settingsBtn) {
      settingsBtn.style.cursor = "pointer";
      settingsBtn.addEventListener("click", () => {
        window.location.href = "/settings";
      });
    }
  })();

  // ============ RAFFLE DETAILS MODAL ============
  (function () {
    const modal = document.getElementById("detailsModal");
    const closeBtn = document.getElementById("closeDetailsModal");
    const modalTitle = document.getElementById("modalRaffleTitle");
    const modalTotalSpots = document.getElementById("modalTotalSpots");
    const modalParticipants = document.getElementById("modalParticipants");
    const modalTotalPaid = document.getElementById("modalTotalPaid");
    const modalTotalValue = document.getElementById("modalTotalValue");
    const modalParticipantsBody = document.getElementById("modalParticipantsBody");

    window.showRaffleDetails = function(raffle) {
      // Set title
      const itemName = getItemName(raffle);
      modalTitle.textContent = itemName;

      // Calculate stats
      const totalSpots = raffle.totalSpots || 0;
      const participants = raffle.participants || [];
      const uniqueParticipants = participants.length;
      const totalPaid = participants.filter(p => p.paid).reduce((sum, p) => sum + (p.owed || 0), 0);
      const totalValue = participants.reduce((sum, p) => sum + (p.owed || 0), 0);

      // Update stats
      modalTotalSpots.textContent = totalSpots;
      modalParticipants.textContent = uniqueParticipants;
      modalTotalPaid.textContent = '$' + totalPaid.toLocaleString();
      modalTotalValue.textContent = '$' + totalValue.toLocaleString();

      // Populate participants table
      modalParticipantsBody.innerHTML = '';

      if (participants.length === 0) {
        modalParticipantsBody.innerHTML = `
          <tr>
            <td colspan="5" style="text-align: center; padding: 40px; color: #9CA3AF;">
              No participants found
            </td>
          </tr>
        `;
      } else {
        participants.forEach(p => {
          const row = document.createElement('tr');
          const paidClass = p.paid ? 'yes' : 'no';
          const paidIcon = p.paid ? '‚úì' : '√ó';
          const paidText = p.paid ? 'Paid' : 'Unpaid';

          row.innerHTML = `
            <td class="username-cell">${p.redditUser || '-'}</td>
            <td class="realname-cell">${p.realName || '-'}</td>
            <td>${p.spots || 0}</td>
            <td>$${(p.owed || 0).toLocaleString()}</td>
            <td><span class="paid-badge ${paidClass}">${paidIcon} ${paidText}</span></td>
          `;
          modalParticipantsBody.appendChild(row);
        });
      }

      // Show modal
      modal.classList.add('show');
    };

    function closeModal() {
      modal.classList.remove('show');
    }

    closeBtn.addEventListener('click', closeModal);

    modal.addEventListener('click', (e) => {
      if (e.target === modal) closeModal();
    });
  })();

  // ============ RAFFLE HISTORY LOGIC ============
  (function () {
    const tbody = document.getElementById("rafflesTableBody");
    const raffleCount = document.getElementById("raffleCount");
    const showingCount = document.getElementById("showingCount");
    const successRate = document.getElementById("successRate");
    const tabs = document.getElementById("tabs");
    const search = document.getElementById("raffleSearch");

    let allRaffles = [];
    let activeFilter = "all";
    let query = "";

async function loadRaffles() {
  try {
    const result = await API.getHistory();
    if (result.ok) {
      allRaffles = result.data || [];
      renderRaffles();
    } else {
      console.error('Failed to load raffle history:', result.error);
      allRaffles = [];
      renderRaffles();
    }
  } catch (e) {
    console.error('Failed to load raffle history:', e);
    allRaffles = [];
    renderRaffles();
  }
}

    function formatDate(isoString) {
      const date = new Date(isoString);
      const options = { month: 'short', day: 'numeric', year: 'numeric' };
      return date.toLocaleDateString('en-US', options);
    }

    function getItemName(raffle) {
      // Try to extract item name from Reddit link or use placeholder
      if (raffle.redditLink) {
        const match = raffle.redditLink.match(/comments\/[^/]+\/([^/]+)/);
        if (match) {
          return match[1].replace(/_/g, ' ').replace(/\b\w/g, l => l.toUpperCase());
        }
        return 'Watch Raffle';
      }
      return 'Custom Raffle';
    }

    window.getItemName = getItemName;

    function getRandomWinner(raffle) {
      if (raffle.status !== 'completed' || !raffle.participants || raffle.participants.length === 0) {
        return null;
      }

      // Get a paid participant as winner
      const paidParticipants = raffle.participants.filter(p => p.paid);
      if (paidParticipants.length === 0) return null;

      const winner = paidParticipants[Math.floor(Math.random() * paidParticipants.length)];
      const randomSpot = Math.floor(Math.random() * raffle.totalSpots) + 1;

      return {
        username: winner.redditUser,
        spot: randomSpot
      };
    }

    function renderRaffles() {
      tbody.innerHTML = '';

      if (allRaffles.length === 0) {
        tbody.innerHTML = `
          <tr>
            <td colspan="7">
              <div class="empty-state">
                <div class="empty-state-icon">üìã</div>
                <div class="empty-state-title">No Raffle History</div>
                <div class="empty-state-text">Complete or cancel raffles from the Active Raffle page to see them here.</div>
              </div>
            </td>
          </tr>
        `;
        updateStats([]);
        return;
      }

      allRaffles.forEach(raffle => {
        const row = document.createElement('tr');
        row.dataset.status = raffle.status;
        row.dataset.raffleId = raffle.id;

        const itemName = getItemName(raffle);
        const date = formatDate(raffle.date);
        const spotsFilled = raffle.participants ? raffle.participants.reduce((sum, p) => sum + p.spots, 0) : 0;
        const spotsText = `${spotsFilled}/${raffle.totalSpots || 0}`;
        const value = raffle.status === 'completed' ? (raffle.totalPaid || raffle.totalOwed || 0) : 0;
        const statusClass = raffle.status === 'completed' ? 'status-completed' : 'status-cancelled';
        const statusIcon = raffle.status === 'completed' ? '‚úì' : '√ó';
        const statusText = raffle.status === 'completed' ? 'Completed' : 'Cancelled';

const winnerHtml = raffle.winner && raffle.winner.username
  ? `<span>üèÜ</span>
     <div style="min-width:0;">
       <a href="#" onclick="return false;">${raffle.winner.username}</a>
       <small>Spot #${raffle.winner.spot}</small>
     </div>`
  : '-';

        const linkHtml = raffle.redditLink
          ? `<a class="link-pill" href="${raffle.redditLink}" target="_blank" onclick="event.stopPropagation()">View Raffle <span class="ext">‚Üó</span></a>`
          : '‚Äî';

        row.innerHTML = `
          <td>${date}</td>
          <td>${itemName}</td>
          <td>${linkHtml}</td>
          <td>${spotsText}</td>
          <td>$${value.toLocaleString()}</td>
          <td><span class="status-chip ${statusClass}"><span class="dot">${statusIcon}</span>${statusText}</span></td>
          <td class="winner">${winnerHtml}</td>
        `;

        // Add click handler to show details
        row.addEventListener('click', () => {
          showRaffleDetails(raffle);
        });

        tbody.appendChild(row);
      });

      applyFilters();
    }

    function applyFilters() {
      const q = query.trim().toLowerCase();
      const rows = Array.from(tbody.querySelectorAll("tr"));
      const visible = [];

      rows.forEach(r => {
        if (r.querySelector('.empty-state')) {
          r.style.display = '';
          return;
        }

        const statusOk = activeFilter === "all" || r.dataset.status === activeFilter;
        const text = r.innerText.toLowerCase();
        const searchOk = !q || text.includes(q);

        const show = statusOk && searchOk;
        r.style.display = show ? "" : "none";
        if (show) visible.push(r);
      });

      updateStats(visible);
    }

    function updateStats(visibleRows) {
      const completed = visibleRows.filter(r => r.dataset.status === "completed").length;
      const total = allRaffles.length;
      const showing = visibleRows.filter(r => !r.querySelector('.empty-state')).length;

      raffleCount.textContent = total;
      showingCount.textContent = showing;

      if (total === 0) {
        successRate.textContent = "0%";
        successRate.style.color = "#64748b";
      } else {
        const allCompleted = allRaffles.filter(r => r.status === "completed").length;
        const pct = Math.round((allCompleted / total) * 100);
        successRate.textContent = pct + "%";
        successRate.style.color = pct >= 50 ? "#16a34a" : "#ef4444";
      }
    }

    tabs?.addEventListener("click", (e) => {
      const btn = e.target.closest(".tab");
      if (!btn) return;

      activeFilter = btn.dataset.filter;
      tabs.querySelectorAll(".tab").forEach(b => b.classList.remove("is-active"));
      btn.classList.add("is-active");
      applyFilters();
    });

    search?.addEventListener("input", () => {
      query = search.value;
      applyFilters();
    });

// Initial load
(async function() {
  await loadRaffles();
})();

    // Reload when page becomes visible (in case user finished a raffle in another tab)
    document.addEventListener('visibilitychange', () => {
      if (!document.hidden) {
        loadRaffles();
      }
    });
  })();
</script>

</body>
</html>
