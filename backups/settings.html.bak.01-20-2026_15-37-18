  <script>
    // Settings icon navigation
    (function () {
      const settingsBtn = document.getElementById("settingsBtn");
      if (settingsBtn) {
        settingsBtn.addEventListener("click", () => {
          window.location.href = "/settings";
        });
      }
    })();

    // Make dashed upload box clickable
    (function () {
      const clickArea = document.querySelector(".upload-box .click-area");
      const fileInput = document.getElementById("gmailOauthFile");
      if (clickArea && fileInput) {
        clickArea.addEventListener("click", () => fileInput.click());
      }
    })();

    // Upload file when selected
    document.getElementById("gmailOauthFile")?.addEventListener("change", async (e) => {
      const file = e.target.files?.[0];
      if (!file) return;

      try {
        const fd = new FormData();
        fd.append("file", file);

        const res = await fetch("/api/settings/upload-gmail-oauth", {
          method: "POST",
          body: fd
        });

        const data = await res.json().catch(() => ({}));

        if (res.ok && data.ok) {
          alert("‚úÖ Gmail OAuth JSON uploaded successfully.");
        } else {
          alert("‚ùå Upload failed: " + (data.error || "Unknown error"));
        }
      } catch (err) {
        alert("‚ùå Upload failed: " + (err?.message || err));
      } finally {
        e.target.value = ""; // allow re-upload same file
      }
    });

    // Save settings
    document.getElementById("saveSettings")?.addEventListener("click", () => {
      const tz = document.getElementById("timezone")?.value || "America/New_York";
      alert("‚úÖ Saved (UI only for now): Timezone = " + tz);
    });

    // ============ DELETE RAFFLE HISTORY ============
(function () {
  const deleteBtn = document.getElementById("deleteHistoryBtn");
  const historyCountDisplay = document.getElementById("historyCountDisplay");
  const confirmModal = document.getElementById("confirmModal");
  const cancelDeleteBtn = document.getElementById("cancelDeleteBtn");
  const confirmDeleteBtn = document.getElementById("confirmDeleteBtn");
  const modalRaffleCount = document.getElementById("modalRaffleCount");

  async function updateHistoryCount() {
    try {
      const result = await API.getHistory();
      const count = result.ok ? (result.data || []).length : 0;
      
      historyCountDisplay.textContent = count;
      modalRaffleCount.textContent = count;
      
      // Disable button if no history
      if (count === 0) {
        deleteBtn.disabled = true;
        deleteBtn.style.opacity = '0.5';
        deleteBtn.style.cursor = 'not-allowed';
      } else {
        deleteBtn.disabled = false;
        deleteBtn.style.opacity = '1';
        deleteBtn.style.cursor = 'pointer';
      }
    } catch (e) {
      console.error('Failed to get history count:', e);
      historyCountDisplay.textContent = '0';
      modalRaffleCount.textContent = '0';
      deleteBtn.disabled = true;
    }
  }

  // Show confirmation modal
  deleteBtn?.addEventListener('click', async () => {
    const result = await API.getHistory();
    const count = result.ok ? (result.data || []).length : 0;
    
    if (count === 0) {
      alert('No raffle history to delete.');
      return;
    }
    confirmModal.classList.add('show');
  });

  // Cancel deletion
  cancelDeleteBtn?.addEventListener('click', () => {
    confirmModal.classList.remove('show');
  });

  // Close modal on overlay click
  confirmModal?.addEventListener('click', (e) => {
    if (e.target === confirmModal) {
      confirmModal.classList.remove('show');
    }
  });

  // Confirm deletion
  confirmDeleteBtn?.addEventListener('click', async () => {
    try {
      const result = await API.getHistory();
      const count = result.ok ? (result.data || []).length : 0;
      
      await API.clearHistory();
      
      confirmModal.classList.remove('show');
      
      alert(`‚úÖ Successfully deleted ${count} raffle${count !== 1 ? 's' : ''} from history.`);
      
      await updateHistoryCount();
    } catch (e) {
      alert('‚ùå Failed to delete raffle history: ' + e.message);
    }
  });

  // Initial count update
  (async function() {
    await updateHistoryCount();
  })();

  // Update count when page becomes visible
  document.addEventListener('visibilitychange', () => {
        if (!document.hidden) {
          updateHistoryCount();
        }
      });
    })();  // ‚Üê Fixed - should be part of the IIFE closing
  </script>
</body>
