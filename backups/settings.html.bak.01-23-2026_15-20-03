          <option value="UTC">UTC</option>
        </select>
      </div>

      <div class="save-row">
        <button class="save-btn" id="saveSettings">
          <span>Save Settings</span>
        </button>
      </div>
    </div>

     <!-- NAV -->
<nav class="sidebar-nav" id="sidebarNav">
  <a class="nav-item" href="/dashboard"><img class="nav-icon" src="/static/assets/Icons/Heart-Rate.png" alt="">Dashboard</a>
  <a class="nav-item" href="/active-raffle"><img class="nav-icon" src="/static/assets/Icons/Graph%20Copy.png" alt="">Active Raffle</a>
