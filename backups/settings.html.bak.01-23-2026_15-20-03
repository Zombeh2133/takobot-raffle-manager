<script>
  // Sidebar Admin Control - Intercept admin links for non-admin users
  (function() {
    const sidebarNav = document.getElementById('sidebarNav');
    if (!sidebarNav) return;
    
    // Find admin links
    const allLinks = sidebarNav.querySelectorAll('.nav-item');
    allLinks.forEach(link => {
      const href = link.getAttribute('href');
      if (href === '/admin' || href === '/user-management') {
        // Add click handler that runs BEFORE navigation
        link.addEventListener('click', function(e) {
          if (!window.adminCheckComplete) {
            e.preventDefault();
            e.stopPropagation();
            alert('Access Denied\n\nAdmins only');
          }
        }, true);
      }
    });
    
    // Check if user is admin (async)
    (async function() {
      try {
        const response = await fetch('/api/auth/current-user');
        if (!response.ok) return;
        
        const data = await response.json();
        if (data.data?.isAdmin === true) {
          window.adminCheckComplete = true;
          console.log('‚úÖ Admin access granted');
        } else {
          console.log('üîí Admin links blocked for non-admin user');
        }
      } catch (error) {
        console.error('Error checking admin status:', error);
      }
    })();
  })();
</script>
  </div>

  <!-- CONFIRMATION MODAL (History) -->
  <div class="modal-overlay" id="confirmModal">
    <div class="modal-box">
      <div class="modal-icon">‚ö†Ô∏è</div>
      <h3 class="modal-title">Delete All Raffle History?</h3>
      <p class="modal-message">
        This will permanently delete <strong id="modalRaffleCount">0</strong> raffles from your history. This action cannot be undone.
      </p>
      <div class="modal-actions">
        <button class="modal-btn modal-btn-cancel" id="cancelDeleteBtn">Cancel</button>
        <button class="modal-btn modal-btn-confirm" id="confirmDeleteBtn">Delete Forever</button>
      </div>
    </div>
  </div>

  <!-- CONFIRMATION MODAL (Clear Mappings) -->
  <div class="modal-overlay" id="clearMappingsModal">
    <div class="modal-box">
      <div class="modal-icon">‚ö†Ô∏è</div>
      <h3 class="modal-title">Clear All Name Mappings?</h3>
      <p class="modal-message">
        This will permanently delete <strong id="modalMappingCount">0</strong> name mappings. This action cannot be undone.
      </p>
      <div class="modal-actions">
        <button class="modal-btn modal-btn-cancel" id="cancelClearMappingsBtn">Cancel</button>
        <button class="modal-btn modal-btn-confirm" id="confirmClearMappingsBtn">Delete Forever</button>
      </div>
    </div>
  </div>

  <script>
    // ============ NAME MAPPING LOCALSTORAGE ============
    const NAME_MAPPING_KEY = 'raffleui_reddit_name_mapping';
    const LAST_IMPORT_KEY = 'raffleui_name_import_date';
    
    function saveNameMapping(redditUser, realName) {
      try {
        const mappings = JSON.parse(localStorage.getItem(NAME_MAPPING_KEY) || '{}');
        mappings[redditUser] = realName;
        localStorage.setItem(NAME_MAPPING_KEY, JSON.stringify(mappings));
      } catch (e) {
        console.error('Failed to save name mapping:', e);
      }
    }
    
    function getNameFromMapping(redditUser) {
      try {
        const mappings = JSON.parse(localStorage.getItem(NAME_MAPPING_KEY) || '{}');
        return mappings[redditUser] || '';
      } catch (e) {
        return '';
      }
    }
    
    function loadAllMappings() {
      try {
        return JSON.parse(localStorage.getItem(NAME_MAPPING_KEY) || '{}');
      } catch (e) {
        return {};
      }
    }
    
    function saveAllMappings(mappings) {
      try {
        localStorage.setItem(NAME_MAPPING_KEY, JSON.stringify(mappings));
        localStorage.setItem(LAST_IMPORT_KEY, new Date().toISOString());
      } catch (e) {
        console.error('Failed to save mappings:', e);
      }
    }
    
    function clearAllMappings() {
      localStorage.removeItem(NAME_MAPPING_KEY);
      localStorage.removeItem(LAST_IMPORT_KEY);
    }
    
    function exportMappingsAsCSV() {
      const mappings = loadAllMappings();
      let csv = 'reddit_user,real_name\n';
      for (const [reddit, name] of Object.entries(mappings)) {
        csv += `${reddit},"${name}"\n`;
      }
      return csv;
    }

    function updateMappingStats() {
      const mappings = loadAllMappings();
      const count = Object.keys(mappings).length;
      document.getElementById('mappingCount').textContent = count;

      const lastImport = localStorage.getItem(LAST_IMPORT_KEY);
      if (lastImport) {
        const date = new Date(lastImport);
        document.getElementById('lastImportDate').textContent = date.toLocaleDateString();
      } else {
        document.getElementById('lastImportDate').textContent = 'Never';
      }
    }

    // ============ NAME IMPORT FUNCTIONALITY ============
    (function () {
      const fileInput = document.getElementById('nameFileInput');
      const clickArea = document.getElementById('nameFileClickArea');
      const importNowBtn = document.getElementById('importNowBtn');
      const exportBtn = document.getElementById('exportMappingsBtn');
      const clearBtn = document.getElementById('clearMappingsBtn');
      const preview = document.getElementById('importPreview');
      const previewList = document.getElementById('previewList');
      const previewCount = document.getElementById('previewCount');
      
      let parsedData = null;

      // Make upload box clickable
      if (clickArea && fileInput) {
        clickArea.addEventListener('click', () => fileInput.click());
      }

      // File input change handler
      fileInput.addEventListener('change', async (e) => {
        const file = e.target.files[0];
        if (!file) return;

        try {
          const data = await parseFile(file);
          parsedData = data;
          
          // Show preview
          const entries = Object.entries(data);
          const previewEntries = entries.slice(0, 5);
          
          previewList.innerHTML = previewEntries
            .map(([reddit, name]) => `${reddit} ‚Üí ${name}`)
            .join('<br>');
          
          previewCount.textContent = `‚úì Ready to import ${entries.length} name mappings`;
          preview.classList.add('show');
          importNowBtn.disabled = false;
          
        } catch (error) {
          alert('Error parsing file: ' + error.message);
          preview.classList.remove('show');
          importNowBtn.disabled = true;
        }
      });

      // Parse file (CSV or Excel)
      async function parseFile(file) {
        const fileName = file.name.toLowerCase();
        
        if (fileName.endsWith('.csv') || fileName.endsWith('.tsv') || fileName.endsWith('.txt')) {
          return parseCSV(file);
        } else if (fileName.endsWith('.xlsx') || fileName.endsWith('.xls')) {
          return parseExcel(file);
        } else {
          throw new Error('Unsupported file format. Use CSV, TSV, or Excel (.xlsx, .xls)');
        }
      }

      // Parse CSV
      async function parseCSV(file) {
        const text = await file.text();
        const lines = text.split('\n').filter(line => line.trim());
        const mappings = {};
        
        // Skip header if present
        const startIndex = lines[0].toLowerCase().includes('reddit') ? 1 : 0;
        
        for (let i = startIndex; i < lines.length; i++) {
          const line = lines[i].trim();
          if (!line) continue;
          
          const parts = line.split(',').map(p => p.trim());
          if (parts.length >= 2) {
            const reddit = parts[0];
            const name = parts.slice(1).join(',').replace(/^["']|["']$/g, '');
            if (reddit && name) {
              mappings[reddit] = name;
            }
          }
        }
        
        return mappings;
      }

      // Parse Excel
      async function parseExcel(file) {
        return new Promise((resolve, reject) => {
          const reader = new FileReader();
          
          reader.onload = (e) => {
            try {
              const data = new Uint8Array(e.target.result);
              const workbook = XLSX.read(data, { type: 'array' });
              const firstSheet = workbook.Sheets[workbook.SheetNames[0]];
              const rows = XLSX.utils.sheet_to_json(firstSheet, { header: 1 });
              
              const mappings = {};
              const startIndex = rows[0] && String(rows[0][0]).toLowerCase().includes('reddit') ? 1 : 0;
              
              for (let i = startIndex; i < rows.length; i++) {
                const row = rows[i];
                if (row && row.length >= 2) {
                  const reddit = String(row[0]).trim();
                  const name = String(row[1]).trim();
                  if (reddit && name) {
                    mappings[reddit] = name;
                  }
                }
              }
              
              resolve(mappings);
            } catch (error) {
              reject(error);
            }
          };
          
          reader.onerror = () => reject(new Error('Failed to read file'));
          reader.readAsArrayBuffer(file);
        });
      }

      // Import button handler
      importNowBtn.addEventListener('click', () => {
        if (!parsedData) return;
        
        const existing = loadAllMappings();
        const merged = { ...existing, ...parsedData };
        saveAllMappings(merged);
        
        updateMappingStats();
        
        alert(`‚úÖ Successfully imported ${Object.keys(parsedData).length} name mappings!\n\nTotal mappings: ${Object.keys(merged).length}`);
        
        // Reset
        fileInput.value = '';
        preview.classList.remove('show');
        parsedData = null;
        importNowBtn.disabled = true;
      });

      // Export button handler
      exportBtn.addEventListener('click', () => {
        const csv = exportMappingsAsCSV();
        const blob = new Blob([csv], { type: 'text/csv' });
        const url = URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = `reddit_names_${new Date().toISOString().split('T')[0]}.csv`;
        a.click();
        URL.revokeObjectURL(url);
        
        alert('‚úÖ Mappings exported successfully!');
      });

      // Clear button handler
      clearBtn.addEventListener('click', () => {
        const mappings = loadAllMappings();
        const count = Object.keys(mappings).length;
        
        if (count === 0) {
          alert('No mappings to clear.');
          return;
        }

        document.getElementById('modalMappingCount').textContent = count;
        document.getElementById('clearMappingsModal').classList.add('show');
      });

      // Initial stats update
      updateMappingStats();
    })();

    // ============ CLEAR MAPPINGS MODAL ============
    (function () {
      const modal = document.getElementById('clearMappingsModal');
      const cancelBtn = document.getElementById('cancelClearMappingsBtn');
      const confirmBtn = document.getElementById('confirmClearMappingsBtn');

      cancelBtn?.addEventListener('click', () => {
        modal.classList.remove('show');
      });

      modal?.addEventListener('click', (e) => {
        if (e.target === modal) {
          modal.classList.remove('show');
        }
      });

      confirmBtn?.addEventListener('click', () => {
        const count = Object.keys(loadAllMappings()).length;
        clearAllMappings();
        updateMappingStats();
        modal.classList.remove('show');
        alert(`‚úÖ Successfully deleted ${count} name mappings.`);
      });
    })();

    // Settings icon navigation
    (function () {
      const settingsBtn = document.getElementById("settingsBtn");
      if (settingsBtn) {
        settingsBtn.addEventListener("click", () => {
          window.location.href = "/settings";
        });
      }
    })();

    // Make dashed upload box clickable
    (function () {
      const clickArea = document.querySelector(".upload-box .click-area");
      const fileInput = document.getElementById("gmailOauthFile");
      if (clickArea && fileInput) {
        clickArea.addEventListener("click", () => fileInput.click());
      }
    })();

    // Upload file when selected
    document.getElementById("gmailOauthFile")?.addEventListener("change", async (e) => {
      const file = e.target.files?.[0];
      if (!file) return;

      try {
        const fd = new FormData();
        fd.append("file", file);

        const res = await fetch("/api/settings/upload-gmail-oauth", {
          method: "POST",
          body: fd
        });

        const data = await res.json().catch(() => ({}));

        if (res.ok && data.ok) {
          alert("‚úÖ Gmail OAuth JSON uploaded successfully.");
        } else {
          alert("‚ùå Upload failed: " + (data.error || "Unknown error"));
        }
      } catch (err) {
        alert("‚ùå Upload failed: " + (err?.message || err));
      } finally {
        e.target.value = "";
      }
    });

    // Save settings
    document.getElementById("saveSettings")?.addEventListener("click", () => {
      const tz = document.getElementById("timezone")?.value || "America/New_York";
      alert("‚úÖ Saved (UI only for now): Timezone = " + tz);
    });

    // ============ DELETE RAFFLE HISTORY ============
    (function () {
      const deleteBtn = document.getElementById("deleteHistoryBtn");
      const historyCountDisplay = document.getElementById("historyCountDisplay");
      const confirmModal = document.getElementById("confirmModal");
      const cancelDeleteBtn = document.getElementById("cancelDeleteBtn");
      const confirmDeleteBtn = document.getElementById("confirmDeleteBtn");
      const modalRaffleCount = document.getElementById("modalRaffleCount");

      async function updateHistoryCount() {
        try {
          const result = await API.getHistory();
          const count = result.ok ? (result.data || []).length : 0;

          historyCountDisplay.textContent = count;
          modalRaffleCount.textContent = count;

          if (count === 0) {
            deleteBtn.disabled = true;
            deleteBtn.style.opacity = '0.5';
            deleteBtn.style.cursor = 'not-allowed';
          } else {
            deleteBtn.disabled = false;
            deleteBtn.style.opacity = '1';
            deleteBtn.style.cursor = 'pointer';
          }
        } catch (e) {
          console.error('Failed to get history count:', e);
          historyCountDisplay.textContent = '0';
          modalRaffleCount.textContent = '0';
          deleteBtn.disabled = true;
        }
      }

      deleteBtn?.addEventListener('click', async () => {
        const result = await API.getHistory();
        const count = result.ok ? (result.data || []).length : 0;

        if (count === 0) {
          alert('No raffle history to delete.');
          return;
        }
        confirmModal.classList.add('show');
      });

      cancelDeleteBtn?.addEventListener('click', () => {
        confirmModal.classList.remove('show');
      });

      confirmModal?.addEventListener('click', (e) => {
        if (e.target === confirmModal) {
          confirmModal.classList.remove('show');
        }
      });

      confirmDeleteBtn?.addEventListener('click', async () => {
        try {
          const result = await API.getHistory();
          const count = result.ok ? (result.data || []).length : 0;

          await API.clearHistory();

          confirmModal.classList.remove('show');

          alert(`‚úÖ Successfully deleted ${count} raffle${count !== 1 ? 's' : ''} from history.`);

          await updateHistoryCount();
        } catch (e) {
          alert('‚ùå Failed to delete raffle history: ' + e.message);
        }
      });

      (async function() {
        await updateHistoryCount();
      })();

      document.addEventListener('visibilitychange', () => {
        if (!document.hidden) {
          updateHistoryCount();
        }
      });
    })();

    // ============ LOGOUT HANDLER ============
    (function () {
      const logoutBtn = document.getElementById('logoutBtn');

      logoutBtn?.addEventListener('click', async () => {
        try {
          const response = await fetch('/api/auth/logout', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            }
          });

          const result = await response.json();

          if (result.ok) {
            // Redirect to login page
            window.location.href = '/login';
          } else {
            alert('‚ùå Logout failed: ' + (result.error || 'Unknown error'));
          }
        } catch (error) {
          console.error('Logout error:', error);
          alert('‚ùå Logout failed: ' + error.message);
        }
      });
    })();
  </script>
</body>
</html>
