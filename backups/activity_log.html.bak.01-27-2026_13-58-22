<script>
  // ============ USER SECTION & LOGOUT ============
  (async function() {
    const userAvatar = document.getElementById('userAvatar');
    const userName = document.getElementById('userName');
    const userRole = document.getElementById('userRole');
    const logoutBtn = document.getElementById('sidebarLogoutBtn');

    // Fetch current user info
    try {
      const response = await fetch('/api/auth/current-user');
      if (response.ok) {
        const result = await response.json();
        if (result.ok && result.data) {
          const user = result.data;
          
          // Update username
          if (user.username) {
            userName.textContent = user.username;
            // Update avatar with first letter
            userAvatar.textContent = user.username.charAt(0).toUpperCase();
          }
          
          // Update role
          if (user.role) {
            userRole.textContent = user.role.charAt(0).toUpperCase() + user.role.slice(1);
          } else if (user.isAdmin) {
            userRole.textContent = 'Admin';
          } else {
            userRole.textContent = 'User';
          }
        }
      }
    } catch (error) {
      console.error('Failed to fetch user info:', error);
    }

    // Logout button handler
    logoutBtn?.addEventListener('click', async () => {
      try {
        const response = await fetch('/api/auth/logout', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          }
        });

        const result = await response.json();

        if (result.ok) {
          window.location.href = '/login';
        } else {
          alert('âŒ Logout failed: ' + (result.error || 'Unknown error'));
        }
      } catch (error) {
        console.error('Logout error:', error);
        alert('âŒ Logout failed: ' + error.message);
      }
    });
  })();

  // Sidebar Admin Control - Intercept admin links for non-admin users
  (function() {
    const sidebarNav = document.getElementById('sidebarNav');
    if (!sidebarNav) return;
    
    // Find admin links
    const allLinks = sidebarNav.querySelectorAll('.nav-item');
    allLinks.forEach(link => {
      const href = link.getAttribute('href');
      
      // Prevent reload when clicking activity log link on activity log page
      if (href === '/activity-log') {
        link.addEventListener('click', function(e) {
          e.preventDefault();
          // Do nothing - already on this page
        });
      }
      
      if (href === '/admin' || href === '/user-management') {
        // Add click handler that runs BEFORE navigation
        link.addEventListener('click', function(e) {
          if (!window.adminCheckComplete) {
            e.preventDefault();
            e.stopPropagation();
            showAccessDenied();
          }
        }, true);
      }
    });
    
    // Check if user is admin (async)
    (async function() {
      try {
        const response = await fetch('/api/auth/current-user');
        if (!response.ok) {
          console.log('ðŸ”’ Admin check: endpoint returned', response.status);
          return;
        }
        
        // Check if response is JSON
        const contentType = response.headers.get('content-type');
        if (!contentType || !contentType.includes('application/json')) {
          console.log('ðŸ”’ Admin check: non-JSON response, assuming non-admin');
          return;
        }
        
        const data = await response.json();
        if (data.data?.isAdmin === true) {
          window.adminCheckComplete = true;
          console.log('âœ… Admin access granted');
        } else {
          console.log('ðŸ”’ Admin links blocked for non-admin user');
        }
      } catch (error) {
        console.log('ðŸ”’ Admin check failed, assuming non-admin');
      }
    })();
  })();
</script>

  <script>
    // Move sidebar highlight square to active item
    (function () {
      const nav = document.getElementById("sidebarNav");
      const square = document.getElementById("activeSquare");
      if (!nav || !square) return;

      function moveSquareTo(item) {
        square.style.top = (nav.offsetTop + item.offsetTop) + "px";
      }

      const active = nav.querySelector(".is-active");
      if (active) moveSquareTo(active);
    })();

    // Settings button
    (function () {
      const settingsBtn = document.getElementById("settingsBtn");
      if (settingsBtn) {
        settingsBtn.addEventListener("click", () => {
          window.location.href = "/settings";
        });
      }
    })();

    // ============ ACTIVITY LOG LOGIC ============
    (function () {
      const activityFeed = document.getElementById("activityFeed");
      const activityCount = document.getElementById("activityCount");
      const showingCount = document.getElementById("showingCount");
      const lastUpdated = document.getElementById("lastUpdated");
      const filterTabs = document.getElementById("filterTabs");
      const activitySearch = document.getElementById("activitySearch");
      const clearLogBtn = document.getElementById("clearLogBtn");

      let allActivities = [];
      let activeFilter = "all";
      let query = "";

      async function loadActivities() {
        try {
          // Get current user first
          const userRes = await fetch('/api/auth/current-user');
          if (!userRes.ok) {
            console.error('Failed to get current user for activity log');
            allActivities = [];
            renderActivities();
            return;
          }
          
          const userResult = await userRes.json();
          if (!userResult.ok || !userResult.data || !userResult.data.username) {
            console.error('No username found for activity log');
            allActivities = [];
            renderActivities();
            return;
          }
          const currentUsername = userResult.data.username;
          
          // Get all activities
          const result = await API.getActivities();
          if (result.ok) {
            const allData = result.data || [];
            
            console.log(`ðŸ” DEBUG: Current user = "${currentUsername}"`);
            console.log(`ðŸ” DEBUG: Total activities from API = ${allData.length}`);
            console.log(`ðŸ” DEBUG: Sample activities:`, allData.slice(0, 3));
            
            // Filter to only show current user's activities
            allActivities = allData.filter(activity => {
              // TEMPORARY: Show all activities (username filter disabled)
              // TODO: Re-enable once old activities are cleared
              return true; // Show everything for now
              
              // Original filter (disabled):
              // const matches = activity.username === currentUsername;
              // return matches;
            });
            
            // Additional debug: show ALL activities if none match
            if (allActivities.length === 0 && allData.length > 0) {
              console.log('âš ï¸ NO ACTIVITIES MATCHED! Showing all activities for debugging:');
              allData.forEach((act, idx) => {
                console.log(`  Activity ${idx + 1}:`, {
                  title: act.title,
                  username: act.username,
                  type: act.type,
                  timestamp: act.timestamp
                });
              });
            }
            
            console.log(`ðŸ“‹ Activity Log: ${allActivities.length} activities for ${currentUsername}`);
            renderActivities();
          } else {
            console.error('Failed to load activities:', result.error);
            allActivities = [];
            renderActivities();
          }
        } catch (e) {
          console.error('Failed to load activity log:', e);
          allActivities = [];
          renderActivities();
        }
      }

      function getRelativeTime(isoString) {
        const date = new Date(isoString);
        const now = new Date();
        const diffMs = now - date;
        const diffMins = Math.floor(diffMs / 60000);
        const diffHours = Math.floor(diffMs / 3600000);
        const diffDays = Math.floor(diffMs / 86400000);

        if (diffMins < 1) return 'Just now';
        if (diffMins < 60) return `${diffMins}m ago`;
        if (diffHours < 24) return `${diffHours}h ago`;
        if (diffDays < 7) return `${diffDays}d ago`;
        return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
      }

      function getActivityIcon(type) {
        const icons = {
          setup: { emoji: 'âš™ï¸', class: 'icon-setup' },
          participant: { emoji: 'ðŸ‘¤', class: 'icon-participant' },
          payment: { emoji: 'ðŸ’°', class: 'icon-payment' },
          completed: { emoji: 'ðŸŽ‰', class: 'icon-completed' },
          cancelled: { emoji: 'âŒ', class: 'icon-cancelled' },
          system: { emoji: 'ðŸ””', class: 'icon-system' }
        };
        return icons[type] || icons.system;
      }

      function renderActivities() {
        activityFeed.innerHTML = '';

        if (allActivities.length === 0) {
          activityFeed.innerHTML = `
            <div class="empty-state">
              <div class="empty-state-icon">ðŸ“‹</div>
              <div class="empty-state-title">No Activity Yet</div>
              <div class="empty-state-text">Your raffle activities will appear here as you work.</div>
            </div>
          `;
          updateStats([]);
          return;
        }

        allActivities.forEach(activity => {
          const icon = getActivityIcon(activity.type);
          const item = document.createElement('div');
          item.className = 'activity-item';
          item.dataset.type = activity.type;
          item.dataset.searchText = (activity.title + ' ' + (activity.details || '')).toLowerCase();

          let badgeHtml = '';
          if (activity.badge) {
            badgeHtml = `<div class="activity-badge badge-${activity.type}">${activity.badge}</div>`;
          }

          item.innerHTML = `
            <div class="activity-icon ${icon.class}">${icon.emoji}</div>
            <div class="activity-content">
              <div class="activity-main">
                <div class="activity-text">${activity.title}</div>
                <div class="activity-time">${getRelativeTime(activity.timestamp)}</div>
              </div>
              ${activity.details ? `<div class="activity-details">${activity.details}</div>` : ''}
              ${badgeHtml}
            </div>
          `;

          activityFeed.appendChild(item);
        });

        applyFilters();
      }

      function applyFilters() {
        const q = query.trim().toLowerCase();
        const items = Array.from(activityFeed.querySelectorAll('.activity-item'));
        const visible = [];

        items.forEach(item => {
          const typeOk = activeFilter === 'all' || item.dataset.type === activeFilter;
          const searchText = item.dataset.searchText || '';
          const searchOk = !q || searchText.includes(q);

          const show = typeOk && searchOk;
          item.style.display = show ? '' : 'none';
          if (show) visible.push(item);
        });

        updateStats(visible);
      }

      function updateStats(visibleItems) {
        const total = allActivities.length;
        const showing = visibleItems.filter(item => !item.querySelector('.empty-state')).length;

        activityCount.textContent = total;
        showingCount.textContent = showing;

        if (total > 0) {
          const latest = allActivities[0];
          lastUpdated.textContent = getRelativeTime(latest.timestamp);
        } else {
          lastUpdated.textContent = 'Never';
        }
      }

      filterTabs?.addEventListener("click", (e) => {
        const btn = e.target.closest(".filter-tab");
        if (!btn) return;

        activeFilter = btn.dataset.filter;
        filterTabs.querySelectorAll(".filter-tab").forEach(b => b.classList.remove("is-active"));
        btn.classList.add("is-active");
        applyFilters();
      });

      activitySearch?.addEventListener("input", () => {
        query = activitySearch.value;
        applyFilters();
      });

      clearLogBtn?.addEventListener("click", async () => {
        if (!confirm('Are you sure you want to clear all activity logs? This cannot be undone.')) {
          return;
        }

        await API.clearActivities();
        allActivities = [];
        renderActivities();
      });

      // Initial load
      (async function() {
        await loadActivities();
      })();

      // Auto-refresh every 30 seconds
      setInterval(() => {
        if (!document.hidden) {
          loadActivities();
        }
      }, 30000);

      // Reload when page becomes visible
      document.addEventListener('visibilitychange', () => {
        if (!document.hidden) {
          loadActivities();
        }
      });
    })();

    // ===== ACCESS DENIED MODAL =====
    function showAccessDenied() {
      const overlay = document.getElementById('accessDeniedOverlay');
      if (!overlay) {
        alert('Access Denied\n\nAdmins only');
        return;
      }
      overlay.classList.add('show');
      document.body.style.overflow = 'hidden';
    }

    function closeAccessDenied(event) {
      if (!event || event.target === document.getElementById('accessDeniedOverlay')) {
        const overlay = document.getElementById('accessDeniedOverlay');
        if (overlay) {
          overlay.classList.remove('show');
          document.body.style.overflow = '';
        }
      }
    }

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        const overlay = document.getElementById('accessDeniedOverlay');
        if (overlay && overlay.classList.contains('show')) {
          closeAccessDenied({ target: overlay });
        }
      }
    });
  </script>

  <!-- ACCESS DENIED MODAL -->
  <div class="access-denied-overlay" id="accessDeniedOverlay" onclick="closeAccessDenied(event)">
    <div class="access-denied-modal" onclick="event.stopPropagation()">
      <div class="access-modal-header">
        <div class="access-modal-icon">ðŸ”’</div>
        <h2 class="access-modal-title">Access Denied</h2>
        <p class="access-modal-subtitle">Admin privileges required</p>
      </div>
      <div class="access-modal-body">
        <p class="access-modal-message">
          You don't have permission to access this page. This area is restricted to administrators only.
        </p>
        <div class="access-modal-actions">
          <button class="access-modal-btn access-modal-btn-primary" onclick="closeAccessDenied()">
            Got it
          </button>
        </div>
      </div>
    </div>
  </div>

<!-- CLIENT-SIDE NAVIGATION TO ACTIVE RAFFLE -->
<script>
(function() {
  const sidebarNav = document.getElementById('sidebarNav');
  if (!sidebarNav) return;
  
  // Find the Active Raffle link
  const activeRaffleLink = Array.from(sidebarNav.querySelectorAll('.nav-item')).find(link => 
    link.getAttribute('href') === '/active-raffle'
  );
  
  if (activeRaffleLink) {
    activeRaffleLink.addEventListener('click', function(e) {
      e.preventDefault();
      
      // Navigate without full page reload
      window.location.replace('/active-raffle');
    });
  }
})();
</script>

